#!/usr/bin/env bash

# Format: 		IBM 3.5in DSHD 1.44MB 
# gw diskdef: 		ibm.1440
# External tools:	mtools

# Get project name
name="$1"

# Include parent script
if [[ -f "./gw-raw" ]]
then
	parent="./gw-raw"
else
	parent="$(which gw-raw)"
fi
source "$parent" "$name" "source"

# Output file names
img="$name.img"


# Overloaded function from gw-raw
# Converts Kryoflux raw files to IMG using gw built in format
function decode # 1-Nothing
{
	echo "Decoding for IBM 1.44MB"
	gw convert --format ibm.1440 "$raw" "$img"  2>&1 | tee -a $log_decode
}


# Overloaded function from gw-raw
# Extracts files from FAT12 filesystem using mtools
function extract
{
	# Get list of files
	mdir -i "$img"  2>&1 | tee -a $log_extract

	# Create destination
	mkdir -p "$name-files"

	# Extract recursively
	mcopy -i $img -s -p :: "$name-files"
}


# Create dir based on name and rip within it
mkdir -p "$name"
cd "$name"
rip A
cd ..
